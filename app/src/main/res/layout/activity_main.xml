<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bosphere.stepsliderdemo.MainActivity">

    <com.bosphere.stepslider.StepSlider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:thumb_radius="10dp"
        app:thumb_bg_radius="16dp"
        app:track_height="4dp"
        app:track_bg_height="6dp"
        app:track_color="@color/colorAccent"
        app:thumb_color="@color/colorPrimary"
        app:step="5"/>

</android.support.constraint.ConstraintLayout>
